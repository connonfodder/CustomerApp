<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondBg"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/toolbar.TextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/lbAccount"/>

                <View
                    android:layout_width="@dimen/toolbarIconMinWidth"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/toolbar.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:visibility="gone"
                    android:text="@string/lbWithdraw" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondBg"
        android:padding="5dp"
        android:text="@string/account_information" />

    <LinearLayout
        android:id="@+id/layBalance"
        style="@style/settingCategoryLayout">

        <TextView
            style="@style/settingCategoryLayout.textview"
            android:text="@string/balance_withdraw" />

        <ImageView
            style="@style/settingCategoryLayout.imagePath"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondBg" />


    <LinearLayout
        android:id="@+id/layAddress"
        style="@style/settingCategoryLayout">

        <TextView
            style="@style/settingCategoryLayout.textview"
            android:text="@string/edit_contact_info" />

        <ImageView style="@style/settingCategoryLayout.imagePath" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/commonbg" />

    <LinearLayout
        android:id="@+id/layPwd"
        style="@style/settingCategoryLayout">

        <TextView
            style="@style/settingCategoryLayout.textview"
            android:text="@string/change_pwd" />

        <ImageView style="@style/settingCategoryLayout.imagePath" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/commonbg" />

    <LinearLayout
        android:id="@+id/layMasterPass"
        android:visibility="gone"
        style="@style/settingCategoryLayout">

        <TextView
            style="@style/settingCategoryLayout.textview"
            android:text="Connect to MasterPass" />

        <ImageView style="@style/settingCategoryLayout.imagePath" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/commonbg" />

    <LinearLayout
        android:id="@+id/layLocation"
        style="@style/settingCategoryLayout">

        <TextView
            style="@style/settingCategoryLayout.textview"
            android:text="@string/edit_location" />

        <ImageView style="@style/settingCategoryLayout.imagePath" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/commonbg" />

</LinearLayout>